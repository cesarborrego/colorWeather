<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.example.cesar.colorweather.HourlyWeatherActivity">

    <TextView
        style="@style/mainFont"
        android:textStyle="bold"
        android:id="@+id/houtlyWeatherID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="@string/hourly_forcast" />

    <ListView
        android:id="@+id/listHourlyId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/houtlyWeatherID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp" />
</RelativeLayout>
